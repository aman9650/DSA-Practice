import java.util.Scanner;
public class Main{
    public static void main(String[] args){
       int ans =sum2();
       System.out.println(ans);
       
       // OR 
       
       sum2();
    }
        // We use function and method to use this code again and again
        /*//Syntax
        
        access modifier(in OOP'S) return_type name(){
            //body
            return statement 
        }
        */
        
        // return the value
        static int sum2(){
             Scanner in= new Scanner(System.in);
             System.out.println("Enter number 1: ");
             int num1=in.nextInt();
             System.out.println("Enter number 2: ");
             int num2=in.nextInt();
             int sum=num1+num2;
             return sum;
             //System.out.println("This will never execute");
             
             
        }
        
        
        static void sum() {
             Scanner in= new Scanner(System.in);
             System.out.println("Enter number 1: ");
             int num1=in.nextInt();
             System.out.println("Enter number 2: ");
             int num2=in.nextInt();
             int sum=num1+num2;
             System.out.println("The Sum = "+ sum);
             
            
        }
        
    
}
